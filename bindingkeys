bindkey -M vicmd '^xp' history-beginning-search-backward
bindkey -M vicmd '^xn' history-beginning-search-forward
bindkey -M viins '^O' copy-prev-shell-word
bindkey '^P' push-line # push current command line into a buffer, for later use
bindkey '^r' history-incremental-search-backward
bindkey '^s' history-incremental-search-forward
